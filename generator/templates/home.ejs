<html lang="en">
<head>
  <%- include('meta') %>
</head>
<body>
  <%- include('header') %>
  <main class="min-h-screen u-flex-column">
    <div class="h-50p w-100p u-center bg-pink-100 u-shadow-inset">
      <div class="w-70p h-100p u-center u-flex-column-reverse u-flex-row-md">
        <div class="w-100p w-50p-md u-text-center px-2">
          <p class="font-medium text-xl">Welcome to my blog üìö</p>
          <p>I am Jake - Software Developer <i>who is not very good at UX üòÖ</i></p>
          <p>Articles on this site are based on whatever I want to write about - mostly projects I am working on!</p>
        </div>
        <div class="w-100p w-50p-md h-60p u-relative u-none u-block-md">
          <img class="h-90p abs-center u-z-50" src="https://www.gravatar.com/avatar/bb21622fe089a07b029d9851505f68e7?size=512">
          <div class="h-100p abs-center">
            <div class="abs-center h-100p u-z-30"><div class="border-danger bg-red-200 h-100p u-border-8 aspect-1 rotate-m-30"></div></div>
            <div class="abs-center h-100p u-z-40"><div class="border-warning bg-yellow-200 h-100p u-border-8 aspect-1"></div></div>
            <div class="abs-center h-100p u-z-20"><div class="border-info bg-blue-200 h-100p u-border-8 aspect-1 rotate-30"></div></div>
            <div class="abs-center h-100p u-z-1"><div class="border-teal-400 bg-teal-200 h-100p u-border-8 aspect-1 rotate-15"></div></div>
            <div class="abs-center h-100p u-z-10"><div class="border-orange-400 bg-orange-200 h-100p u-border-8 aspect-1 rotate-m-45"></div></div>
            <div class="abs-center h-100p u-z-1"><div class="border-purple-400 bg-purple-200 h-100p u-border-8 aspect-1 rotate-m-15"></div></div>
          </div>
        </div>
      </div>
    </div>
    <div class="u-center w-100p py-2">
      <div class="w-70p">
        <p class="font-medium text-xl">Latest Articles</p>
        <div class="u-flex">
          <% blogPosts.forEach(posts => { %>
            <a href="<%= posts.url %>" class="max-w-30p">
              <div class="u-round-sm u-border-1	px-2 py-1 border-purple-200 mr-1 bg-indigo-100">
                <p class="truncate"><%= posts.title %></p>
                <p class="text-sm m-0 truncate">Published on: <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'long', day: '2-digit'}).format(new Date(posts.datePublished)) %></p>
                <p class="text-xs m-0 truncate">Estimated Read Time: ~<%= posts.readingTime.value %> minute(s)</p>
              </div>
            </a>
          <% }) %>
        </div>
        <br />
        <p class="font-medium text-xl">My Favourites ‚ù§Ô∏è</p>
        <div class="u-flex u-flex-wrap">
          <% favouritePosts.forEach(posts => { %>
            <a href="<%= posts.url %>" class="max-w-30p">
              <div class="u-round-sm u-border-1	px-2 py-1 border-red-200 mr-1 bg-pink-100">
                <p class="truncate"><%= posts.title %></p>
                <p class="text-sm m-0 truncate">Published on: <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'long', day: '2-digit'}).format(new Date(posts.datePublished)) %></p>
                <p class="text-xs m-0 truncate">Estimated Read Time: ~<%= posts.readingTime.value %> minute(s)</p>
              </div>
            </a>
          <% }) %>
        </div>
      </div>
    </div>
  </main>
  <%- include('cookie') %>
  <%- include('footer') %>
</body>
</html>
